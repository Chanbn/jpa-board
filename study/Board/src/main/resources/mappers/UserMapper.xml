<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.board.mapper.UserMapper">


<resultMap type="com.board.domain.user.User" id="memberMap">
	<id property="userid" column="userid"/>
	<result property="userid" column="userid"/>
	<result property="name" column="name"/>
	<result property="email" column="email"/>
	<result property="password" column="password"/>	
	<result property="nickname" column="nickname"></result>
	<collection property="authList" resultMap="authMap">
	</collection>		
	</resultMap>
	
	<resultMap type="com.board.domain.AuthVO" id="authMap">
	<result property="userid" column="userid"/>
	<result property="authority" column="authority"/>
	</resultMap>

	<select id="read" resultMap="memberMap">

		SELECT
	mem.userid, name, email, password, enabled, authority,nickname 
	FROM
	uuuser mem LEFT OUTER JOIN authorities auth on mem.userid = auth.userid
	WHERE mem.userid= #{userid}

	</select>
	
	<select id="emailValid" resultType="int"> 
	select count(*) from uuuser where exists(select 1 from uuuser where email = #{email})
	</select>
	
	<select id="nameValid" resultType="int"> 
	select count(*) from uuuser where exists(select 1 from uuuser where name = #{name})
	</select>
	
	
	<insert id="Signup">
	insert into uuuser(name,userid,password,email,enabled,nickname) values(#{name},#{userid},#{password},#{email},'1',#{nickname})
	</insert>
	<insert id="SignupAuth">
	insert into authorities(userid) values(#{userid})
	</insert>
	
	<insert id="save" >
        INSERT INTO uuuser(userid,name,password,email,nickname) VALUES(#{userid},#{name},#{password}, #{email},#{nickname})
    </insert>
    <select id="findByEmail" resultType="com.board.domain.user.User">
        SELECT * FROM uuuser WHERE email = #{email}
    </select>
    
    
    
    <select id="findMyPost">
    select * from board where email=#{email}
    </select>
</mapper>